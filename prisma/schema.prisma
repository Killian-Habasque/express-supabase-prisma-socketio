generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Board {
  id Int @id @default(autoincrement())
  name String @unique
  scores Score[]
}
model Score {
  id Int @id @default(autoincrement())
  value Int 
  username String
  boardId Int 
  board Board @relation(fields: [boardId], references: [id])
}